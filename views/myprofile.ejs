<script>
  //retrieve data from search page 
  const savedContent = JSON.parse(localStorage.getItem('savedContent')) || [];

  const tableBody = document.querySelector('#saved-content tbody');
  savedContent.forEach(article => {
    const row = document.createElement('tr');
    row.innerHTML = `
      <td>${article.title}</td>
      <td>${article.authors}</td>
      <td>${article.year}</td>
    `;
    tableBody.appendChild(row);
  });
//append rows for categories
  const clearSavedBtn = document.querySelector('#clearsaved');
  clearSavedBtn.addEventListener('click', () => {
    localStorage.removeItem('savedContent');
    tableBody.innerHTML = '';
    //set condition to click
  });
</script> 

